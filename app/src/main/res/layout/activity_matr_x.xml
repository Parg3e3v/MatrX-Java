<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatrX">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center_horizontal"
        android:text="@string/matrx"
        android:layout_marginTop="40sp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/black_ops_one"
        android:gravity="center_horizontal"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="20sp"
        android:id="@+id/tempText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="..."
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/cmd_input"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="Input some comand hear..."
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary" />

    <Button
        android:id="@+id/ok_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="80sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/black_ops_one"
        android:text="Speak"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/start_but"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="80sp"
        android:fontFamily="@font/black_ops_one"
        android:text="Start"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/cmd_list"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="80sp"
        android:fontFamily="@font/black_ops_one"
        android:text="Список Команд"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/quit_but"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:fontFamily="@font/black_ops_one"
        android:layout_marginTop="20sp"
        android:text="Quit"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />
</LinearLayout>